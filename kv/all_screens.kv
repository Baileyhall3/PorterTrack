<TaskListItem>:
    id: the_list_item
    markup: True
    on_press:
        self.show_task_info_dialog()

    LeftCheckbox:
        id: check
        on_release:
            root.mark_complete(check, the_list_item)

    IconRightWidget:
        icon: 'trash-can-outline'
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1
        on_release:
            root.delete_task(the_list_item)

<DialogContent>:
    id: task_info
    size_hint: 1, None
    size: 300, 400
    pos_hint : {"center_x": 0.5, "center_y": 0.5}
    elevation: 3
    padding: 25
    spacing: "10dp"
    orientation: 'vertical'

    MDLabel:
        id: jobtype
        markup: True
        text: "[b]Patient Movement[/b]"
        font_size: 28
        halign: 'center'
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        id: origin_label
        markup: True
        text: "[b]From:[/b] Ward 2"
        font_size: 15
        size_hint: (0.98, 0.5)
        pos_hint: {"center_x": 0.5, "y": 0.9}

    MDLabel:
        id: destination
        markup: True
        text: "[b]To:[/b] X-ray"
        font_size: 15
        size_hint: (0.98, 1)
        pos_hint: {"center_x": 0.5, "y": 0.85}

    MDLabel:
        id: equipment
        markup: True
        text: "[b]Using:[/b] Chair"
        font_size: 15
        size_hint: (0.98, 1)
        pos_hint: {"center_x": 0.5, "y": 0.8}

    MDLabel:
        id: time
        markup: True
        text: "[b]Time:[/b] 15:00"
        font_size: 15
        size_hint: (0.98, 1)
        pos_hint: {"center_x": 0.5, "y": 0.75}

    MDLabel:
        id: pname
        markup: True
        text: "[b]Patient Name:[/b] Bailey Hall"
        font_size: 15
        size_hint: (0.98, 1)
        pos_hint: {"center_x": 0.5, "y": 0.75}

    MDFloatLayout:
        MDFillRoundFlatIconButton
            icon: "check"
            text: "COMPLETE"
            theme_text_color: "Custom"
            text_color: "white"
            pos_hint: {'x': 0.55, 'y': 0.1}
            on_release:
                app.mark_complete(check, the_list_item)

        MDFillRoundFlatIconButton
            icon: "window-close"
            text: "CANCEL"
            theme_text_color: "Custom"
            text_color: "white"
            md_bg_color: "red"
            pos_hint: {'x': 0.01, 'y': 0.1}
            on_press:
                app.change_screen("main")

<PorterDialogContent>:
    id: porter_info
    size_hint: 1, None
    size: 200, 300
    pos_hint : {"center_x": 0.5, "center_y": 0.5}
    elevation: 3
    padding: 25
    spacing: "10dp"
    orientation: 'vertical'

    MDLabel:
        id: name
        markup: True
        text: "[b]Bailey Hall[/b]"
        font_size: 24
        halign: 'center'
        size_hint_y: 0.8
        height: self.texture_size[1]

    MDList:
        OneLineRightIconListItem:
            font_size: 30
            text: "[b]Logged in at:[/b] 06:00AM"

        OneLineRightIconListItem:
            font_size: 30
            text: "[b]Available:[/b] [color=#00FF00]Yes[/color]"

        OneLineRightIconListItem:
            font_size: 30
            text: "[b]Assign to Task[/b]"
            IconRightWidget:
                icon: 'plus-circle-outline'
                on_release:
                    app.change_screen('booked_tasks'), app.close_porter_dialog()


<PorterListItem>:
    id: porter_list_item
    markup: True

    IconLeftWidget:
        icon: 'account'
        theme_text_color: "Custom"
        text_color: get_color_from_hex('#0099ff')
        on_release:
            app.show_porter_info_dialog()

    IconRightWidget:
        icon: 'logout'
        on_release:
            root.remove_porter(porter_list_item)


Screen:

    MDTopAppBar:
        id: topbar
        markup: True
        pos_hint: {"top": 1}
        halign: "center"
        title: "[font=Roboto][size=48][i]PorterTrack[/i][/size][/font]"
        left_action_items: [["menu", lambda x: app.open_nav_drawer()]]
        right_action_items: [["plus", lambda x: app.open_task_window()]]
        elevation: 0.8

    Widget:

    MDNavigationLayout:

        ScreenManager:
            id: screen_manager

            Screen:
                name: 'main'

                MDLabel:
                    id: notask
                    markup: True
                    text: "[i]No tasks to show[/i]"
                    font_size: 16
                    halign: "center"

                ScrollView:
                    do_scroll_x: False
                    size_hint: 1, 0.92
                    pos_hint: {"top": 0.85}

                    MDList:
                        id: container


            Screen:
                name: 'booked_tasks'
                MDFloatLayout:
                    orientation: 'vertical'

                    MDLabel:
                        markup: True
                        text: "[i][b]Booked Tasks[b][/i]"
                        font_size: 18
                        halign: "center"
                        pos_hint: {"x": 0.0, "y": 0.8}
                        size_hint: (1, 0.08)
                        theme_text_color: "Custom"
                        md_bg_color: .7, .7, .7, .6
                        text_color: get_color_from_hex('#0099ff')
                        font_size: '24dp'

                    ScrollView:
                        do_scroll_x: False
                        pos_hint: {'y': .15, 'center_x': .5}
                        size_hint: .9, .6

                        MDList:
                            id: container1

            Screen:
                name: 'completed_tasks'
                MDFloatLayout:
                    orientation: 'vertical'

                    MDLabel:
                        markup: True
                        text: "[i][b]Completed Tasks[b][/i]"
                        font_size: 18
                        halign: "center"
                        pos_hint: {"x": 0.0, "y": 0.8}
                        size_hint: (1, 0.08)
                        theme_text_color: "Custom"
                        md_bg_color: .7, .7, .7, .6
                        text_color: get_color_from_hex('#0099ff')
                        font_size: '24dp'

                    ScrollView:
                        do_scroll_x: False
                        pos_hint: {'y': .15, 'center_x': .5}
                        size_hint: .9, .6

                        MDList:
                            id: container2



            Screen:
                name: 'messenger'

                MDFloatLayout:
                    orientation: 'vertical'

                    MDLabel:
                        markup: True
                        text: "[i][b]Messenger[b][/i]"
                        font_size: 18
                        halign: "center"
                        pos_hint: {"x": 0.0, "y": 0.8}
                        size_hint: (1, 0.08)
                        theme_text_color: "Custom"
                        md_bg_color: .7, .7, .7, .6
                        text_color: get_color_from_hex('#0099ff')
                        font_size: '24dp'

                    MDTextField:
                        id: message
                        hint_text: "Message..."
                        mode: "round"
                        icon_right: "arrow-right-circle-outline"
                        size_hint_x: '0.8dp'
                        width: 200
                        font_size: 24
                        pos_hint: {"center_x": 0.5, "y": 0.3}

            Screen:
                name: 'team'

                MDFloatLayout:
                    orientation: 'vertical'

                    MDLabel:
                        markup: True
                        text: "[i][b]My Team[b][/i]"
                        font_size: 18
                        halign: "center"
                        pos_hint: {"x": 0.0, "y": 0.8}
                        size_hint: (1, 0.08)
                        theme_text_color: "Custom"
                        md_bg_color: .7, .7, .7, .6
                        text_color: get_color_from_hex('#0099ff')
                        font_size: '24dp'

                    ScrollView:
                        do_scroll_x: False
                        pos_hint: {'y': .15, 'center_x': .5}
                        size_hint: .9, .6

                        MDList:
                            id: p_container
                            OneLineIconListItem:
                                font_size: 30
                                text: "Add new..."
                                icon: 'plus'
                                on_press: app.open_porter_window()

            Screen:
                name: 'stats'

                MDFloatLayout:
                    orientation: 'vertical'

                    MDLabel:
                        markup: True
                        text: "[i][b]My Stats[b][/i]"
                        font_size: 18
                        halign: "center"
                        pos_hint: {"x": 0.0, "y": 0.8}
                        size_hint: (1, 0.08)
                        theme_text_color: "Custom"
                        md_bg_color: .7, .7, .7, .6
                        text_color: get_color_from_hex('#0099ff')
                        font_size: '24dp'

                    MDList:
                        pos_hint: {'y': .15, 'center_x': .5}
                        size_hint: .9, .6
                        id: stats_container

                        OneLineIconListItem:
                            font_size: 30
                            text: "[b]Tasks Completed Today:[/b]    0"
                            IconLeftWidget:
                                icon: 'clipboard-check-outline'

                        OneLineIconListItem:
                            font_size: 30
                            text: "[b]Average Time Taken:[/b]   0mins 0secs"
                            IconLeftWidget:
                                icon: 'timer-outline'

                        OneLineIconListItem:
                            font_size: 30
                            text: "[b]Distance Covered:[/b]   0km"
                            IconLeftWidget:
                                icon: 'walk'

            Screen:
                name: 'settings'

                MDFloatLayout:
                    orientation: 'vertical'

                    MDLabel:
                        markup: True
                        text: "[i][b]Settings[b][/i]"
                        font_size: 18
                        halign: "center"
                        pos_hint: {"x": 0.0, "y": 0.8}
                        size_hint: (1, 0.08)
                        theme_text_color: "Custom"
                        md_bg_color: .7, .7, .7, .6
                        text_color: get_color_from_hex('#0099ff')
                        font_size: '24dp'

                    MDList:
                        pos_hint: {'y': .15, 'center_x': .5}
                        size_hint: .9, .6

                        OneLineRightIconListItem:
                            font_size: 30
                            text: "[b]Accessibility[/b]"

                        OneLineRightIconListItem:
                            font_size: 30
                            text: "[b]Display[/b]"

                        OneLineRightIconListItem:
                            font_size: 30
                            text: "[b]Notifications[/b]"

                        OneLineRightIconListItem:
                            font_size: 30
                            text: "[b]Dynamic Task Allocation[/b]"
                            IconRightWidget:
                                icon: 'toggle-switch-off-outline'

            Screen:
                name: 'login'

                MDCard:
                    orientation: 'vertical'
                    size: 300, 400
                    size_hint: None, None
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    elevation: 2
                    padding: 25
                    spacing: 25

                    MDLabel:
                        text: "LOGIN"
                        font_size: 40
                        halign: 'center'
                        size_hint_y: None
                        height: self.texture_size[1]
                        padding_y: 15
                        text_color: get_color_from_hex('#0099ff')

                    MDTextField:
                        id: user
                        hint_text: "User ID"
                        mode: "round"
                        icon_right: "account"
                        size_hint_x: None
                        width: 200
                        font_size: 24
                        pos_hint: {"center_x": 0.5}

                    MDTextField:
                        id: password
                        hint_text: "Password"
                        mode: "round"
                        icon_right: "eye-off"
                        size_hint_x: None
                        width: 200
                        font_size: 24
                        pos_hint: {"center_x": 0.5}
                        password: True

                    MDRoundFlatButton:
                        text: "LOG IN"
                        font_size: 12
                        pos_hint: {"center_x": 0.5}
                        on_press:
                            app.check_login_details()

                    MDRoundFlatButton:
                        text: "CLEAR"
                        font_size: 12
                        pos_hint: {"center_x": 0.5}
                        on_press: app.clear()

            Screen:
                name: 'complete_dialog_box'

                MDCard:
                    size_hint: None, None
                    size: 250, 200
                    pos_hint : {"center_x": 0.5, "center_y": 0.5}
                    elevation: 3
                    padding: 25
                    spacing: 25
                    orientation: 'vertical'

                    MDLabel:
                        text: "Complete Task"
                        font_size: 24
                        halign: 'center'
                        size_hint_y: 0.8
                        height: self.texture_size[1]

                    MDLabel:
                        text: "Would you like to complete the current task?"
                        font_size: 18
                        halign: 'center'
                        size_hint_y: None

                    MDFloatLayout:

                        MDFillRoundFlatIconButton
                            icon: "check"
                            text: "YES"
                            theme_text_color: "Custom"
                            text_color: "white"
                            pos_hint: {'x': 0.65, 'y': 0.6}
                            on_release:
                                root.mark_complete(check, the_list_item)

                        MDFillRoundFlatIconButton
                            icon: "window-close"
                            text: "NO"
                            theme_text_color: "Custom"
                            text_color: "white"
                            md_bg_color: "red"
                            pos_hint: {'x': 0.01, 'y': 0.6}
                            on_press:
                                app.change_screen("main")

            Screen:
                name: 'logout_dialog'

                MDCard:
                    size_hint: None, None
                    size: 250, 200
                    pos_hint : {"center_x": 0.5, "center_y": 0.5}
                    elevation: 2
                    padding: 25
                    spacing: 25
                    orientation: 'vertical'

                    MDLabel:
                        text: "Logout"
                        font_size: 24
                        halign: 'center'
                        size_hint_y: 0.8
                        height: self.texture_size[1]

                    MDLabel:
                        text: "Are you sure you want to logout?"
                        font_size: 18
                        halign: 'center'
                        size_hint_y: None

                    MDFloatLayout:

                        MDFillRoundFlatIconButton
                            icon: "check"
                            text: "YES"
                            theme_text_color: "Custom"
                            text_color: "white"
                            pos_hint: {'x': 0.65, 'y': 0.6}
                            on_press:
                                app.change_screen("login")


                        MDFillRoundFlatIconButton
                            icon: "window-close"
                            text: "NO"
                            theme_text_color: "Custom"
                            text_color: "white"
                            md_bg_color: "red"
                            pos_hint: {'x': 0.01, 'y': 0.6}
                            on_press:
                                app.change_screen("main")

    MDNavigationDrawer:
        id: nav_drawer
        elevation: 2
        BoxLayout:
            orientation: 'vertical'
            spacing: '20dp'
            padding: [5,18,10,10]
            theme_text_color: 'Primary'

            MDLabel:
                text: 'Porter ID'
                font_style: 'Subtitle1'
                size_hint_y: None
                height: self.texture_size[1]
                background_color: (1, 1, 1, 0)

            ScrollView:
                MDList:
                    OneLineIconListItem:
                        text: 'Completed Tasks'
                        on_press:
                            app.change_screen("completed_tasks")
                            app.close_nav_drawer()
                        IconLeftWidget:
                            icon: 'clipboard-check-outline'

                    OneLineIconListItem:
                        text: 'My Team'
                        on_press:
                            app.change_screen("team")
                            app.close_nav_drawer()
                        IconLeftWidget:
                            icon: 'account-group'

                    OneLineIconListItem:
                        text: 'My Stats'
                        on_press:
                            app.change_screen("stats")
                            app.close_nav_drawer()
                        IconLeftWidget:
                            icon: 'chart-line'

                    OneLineIconListItem:
                        text: 'Settings'
                        on_press:
                            app.change_screen("settings")
                            app.close_nav_drawer()
                        IconLeftWidget:
                            icon: 'cog-outline'

                    OneLineIconListItem:
                        text: 'Logout'
                        on_press:
                            app.change_screen("logout_dialog")
                            app.close_nav_drawer()
                        IconLeftWidget:
                            icon: 'logout'

    MDBottomAppBar:
        MDTopAppBar:
            title: ""
            icon: "home"
            on_action_button: app.change_screen("main")
            type: "bottom"
            mode: "center"
            left_action_items: [["clipboard-text-outline", lambda x: app.change_screen("booked_tasks")]]
            right_action_items: [["message-reply-text-outline", lambda x: app.change_screen("messenger")]]
            font_size: 40
            elevation: 0
