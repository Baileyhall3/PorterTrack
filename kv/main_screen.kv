<HomeScreen>:
    Screen:

        MDTopAppBar:
            id: topbar
            markup: True
            pos_hint: {"top": 1}
            title: "[color=#FFFFFF][b][size=48][i]Porter[/b]Track[/i][/size][/color]"
            left_action_items: [["menu"]]
            right_action_items: [["plus", lambda x: app.show_task_dialog()]]
            elevation: 0.8

        MDNavigationLayout:

            ScreenManager:
                id: screen_manager

                Screen:
                    name: "scr 1"

                    MDLabel:
                        markup: True
                        text: "[i]Tasks will show here[/i]"
                        halign: "center"

                    ScrollView:
                        id: scroll
                        pos_hint: {"center_y": 0.9, "center_x": 0.5}
                        size_hint: 0.9, 0.8

                        MDBoxLayout:
                            id: container
                            orientation: 'vertical'
                            spacing: 15
                            padding: [10,18,10,10]
                            size_hint_y: None
                            height: self.minimum_height
                            row_default_height: '100dp'
                            row_force_default: True

                    MDBottomAppBar:
                        MDTopAppBar:
                            title: ""
                            icon: "home"
                            on_press: app.change_screen("home_screen")
                            type: "bottom"
                            mode: "center"
                            left_action_items: [["clipboard-text-outline", lambda x: app.change_screen("booked_tasks")]]
                            right_action_items: [["message-reply-text-outline"]]
                            font_size: 40
                            elevation: 0


