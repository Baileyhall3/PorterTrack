Screen:
    name: 'LoginScreen'

    MDTopAppBar:
        id: topbar
        markup: True
        pos_hint: {"top": 1}
        halign: "center"
        title: "[font=Roboto][size=48][i]PorterTrack[/i][/size][/font]"
        elevation: 0.8
    Widget:

        MDCard:
            orientation: 'vertical'
            size: 300, 400
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 5
            padding: 25
            spacing: 25

            MDLabel:
                text: "LOGIN"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15
                text_color: get_color_from_hex('#0099ff')

            MDTextField:
                id: user
                hint_text: "User ID"
                mode: "round"
                icon_right: "account"
                size_hint_x: None
                width: 200
                font_size: 24
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: password
                hint_text: "Password"
                mode: "round"
                icon_right: "eye-off"
                size_hint_x: None
                width: 200
                font_size: 24
                pos_hint: {"center_x": 0.5}
                password: True

            MDRoundFlatButton:
                text: "LOG IN"
                font_size: 12
                pos_hint: {"center_x": 0.5}

            MDRoundFlatButton:
                text: "CLEAR"
                font_size: 12
                pos_hint: {"center_x": 0.5}

